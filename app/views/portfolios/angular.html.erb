<h1>Angular Portfolios</h1>
<%= link_to "Create New Item", new_portfolio_path %>
<% @angular_portfolio_items.each do |item| %>
    <h3>
    <%= link_to item.title, portfolio_show_path(item.id) %>
    </h3>
    <p><%= item.subtitle %></p>
    <p><%= item.body %></p>
    <p><%= image_tag item.thumb_image if item.thumb_image? %></p>
    <p>
        <%= link_to "Edit", edit_portfolio_path(item.id)  %> |
        <%= link_to "Delete", item, method: :delete, data: { confirm: "Are you sure?" } %>
    </p>
    <br />
<% end %>
